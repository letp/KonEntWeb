

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.util.Enumeration;

import javax.annotation.Resource;
import javax.resource.cci.ResultSet;
import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.ServletResponse;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.sql.DataSource;

/**
 * Servlet implementation class Buecher_hinzufuegen
 */

@WebServlet("/Buch")
public class Buecher_hinzufuegen extends HttpServlet {
	private static final long serialVersionUID = 1L;
	
	@Resource(lookup="jdbc/MySQLPool")
	DataSource ds;
       


    /**
     * @see HttpServlet#HttpServlet()
     */
    public Buecher_hinzufuegen() {
        super();
        // TODO Auto-generated constructor stub
    }


	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		//die Angaben werden zu einem Account geholt
		request.setCharacterEncoding("UTF-8");
		Buch neu = new Buch();

	neu.setKategorie(request.getParameter("Kategorie"));
	//neu.setBild(request.getParameter("Bild"));
	neu.setIsbn(request.getParameter("Isbn"));
	neu.setBuch_name(request.getParameter("Titel"));
	neu.setName(request.getParameter("Name"));
	neu.setZustand(request.getParameter("Zustand"));
	neu.setBeschreibung(request.getParameter("Beschreibung"));
	
	persist(neu);
	request.setAttribute("neu",  neu);
	
	// Alle Ã¼bertragenen Felder ermitteln
	final RequestDispatcher dispatcher = request.getRequestDispatcher("outputaccount.jsp");
	dispatcher.forward(request,  response);
	}
	
	
	private void persist(Buch neu) throws ServletException {
		String[] generatedkeys = new String[]{"id"};
		
		try(Connection con = ds.getConnection();
				PreparedStatement p = con.prepareStatement("INSERT INTO accounts (kategorie, bild, isbn, buch_name, name, zustand, beschreibung) VALUES (?,?)", generatedkeys)) {
			
			p.setString(1,  neu.getKategorie());
		//	p.setString(2,  neu.getBild());
			p.setString(3,  neu.getIsbn());
			p.setString(4,  neu.getBuch_name());
			p.setString(5,  neu.getName());
			p.setString(6,  neu.getZustand());
			p.setString(7,  neu.getBeschreibung());
			p.executeUpdate();
			
			
			ResultSet rs = (ResultSet) p.getGeneratedKeys();
			while(rs.next()) {
				neu.setId(rs.getLong(1));
			}
		} catch (Exception ex) {
			
			throw new ServletException(ex.getMessage());
		}
		
		// TODO Auto-generated method stub
		
	}


	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}
	
	
	
	

}
